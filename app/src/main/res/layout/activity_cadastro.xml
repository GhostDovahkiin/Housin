<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastroActivity"
    android:background="#FF4300">


    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="685dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >


        <EditText
            android:id="@+id/textnome"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_text_cadastro"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:shadowColor="#fff"
            android:textAlignment="center"
            android:textColorHint="#000"

            />

        <EditText
            android:id="@+id/textemail"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="260dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_text_cadastro"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <EditText
            android:id="@+id/texttelefone"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_text_cadastro"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <EditText
            android:id="@+id/textloginC"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_text_cadastro"
            android:ems="10"
            android:hint="Login"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <EditText
            android:id="@+id/textsenhaC"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="440dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/background_text_cadastro"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#000" />

        <Button
            android:id="@+id/buttoncadastrar"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="85dp"
            android:background="@drawable/button_laranja"
            android:text="Cadastrar"
            android:textColor="#fff"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textcadastro"
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="110dp"
            android:text="Cadastro"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="26dp"
            android:typeface="normal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImagem"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="130dp"
            android:src="@drawable/profile"
            />

        <TextView
            android:id="@+id/textTermos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="550dp"
            android:layout_marginRight="10dp"
            android:text="Cadastrando-se no Housin você estará de acordo com os termos de uso e Politica de privacidade."
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/termos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="580dp"
            android:layout_marginRight="10dp"
            android:text="Clique aqui para ler os termos"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="italic"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/imageClose"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/ic_close" />

        <TextView
            android:id="@+id/textAdicionarFoto"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:textColor="#000"
            android:text="Adicionar foto"
            android:paddingTop="5dp"/>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>